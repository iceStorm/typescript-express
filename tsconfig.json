{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "baseUrl": ".",
        "target": "ES5",
        "module": "CommonJS",
        "esModuleInterop": true,
        "paths": {
            "@/*": [ "src/*" ]
        },
    },
    "include": [
        "src/**/*.ts",
    ],
    "exclude": [
        "node_modules", "dist",
    ]
}
